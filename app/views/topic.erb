<% if @topic %>
    <h2><%= @topic.title %></h2>
    <p><%= @topic.body %></p>
    <% @comments.each do |comment| %>
      <p>
        COMMENT: <%= comment.body %>
      </p>
    <% end %>
    <form method = "post">
      <textarea rows = '4' cols = '40' name = 'body'></textarea>
       <br>
       <input type = 'submit'>
      </form>
<% else %>
  <p> Topic not found. </p>
<% end %>
